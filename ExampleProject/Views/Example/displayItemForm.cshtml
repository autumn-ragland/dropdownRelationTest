@model ExampleProject.Models.ItemModel
<h1>Add New Item</h1>

@using (@Html.BeginForm("addItemToSample", "Example"))
{
    
    <div class="form-group">
        @Html.LabelFor(item => item.SampleModelid)
        @Html.TextBoxFor(item => item.SampleModelid, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(item => item.title)
        @Html.TextBoxFor(item => item.title, new { @class="form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}  